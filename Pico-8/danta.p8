pico-8 cartridge // http://www.pico-8.com
version 29
__lua__
function _init()
balldir=flr(rnd(2))
end

function _draw()
--cls()
background()
drawplayer()
drawball()
end

function _update()
movement()
ballmovement()
end



-->8
--player
palx=50
paly=123
palx2=80
paly2=126
--enemy
sprite=1
sprx=63
spry=10
--physics
speed=1



function background()
rectfill(0,0,127,127,6)
rectfill(1,1,126,126,3)
end

function movement()
if btn(0) and not (palx==1) then
palx-=1
palx2-=1
end
if btn(1) and not (palx2==126)then
palx+=1
palx2+=1
end
end

function drawplayer()
rectfill(palx,paly,palx2,paly2,1)
end

function drawball()
spr(sprite,sprx,spry)
end

function ballmovement()
if balldir==1 then
sprx+=1 * speed
end
if balldir==0 then
sprx-=1 * speed
end
changedir() 
end

function changedir()
if sprx <= 1 then
balldir=1
end
if sprx >= 119 then
balldir=0
end
end
